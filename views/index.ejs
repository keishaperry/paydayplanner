<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <div>
      <p><a href="">Add Expense</a></p>
    </div><br>
    <div>
      <table border="1px">
        <tbody>
          <% expenses.forEach(function(expense) { %>
              <tr data-guid="<%= expense.id %>">
                  <td><a href="/expense/<%= expense.id %>"><%= expense.name %></a></td>
                  <td><%= expense.amount %></td> 
                  <td><%= expense.repeat ? "Recurring" : "One-time" %></td> 
                  <td><%= dayjs(expense.startDate).format() %></td> 
     
              </tr>
          <% }); %>
          </tbody>
      </table>
      <pre>
